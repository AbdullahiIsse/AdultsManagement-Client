@page "/AddAdults"
@attribute [Authorize]
@using DNP_Assignment.Data
@using Models
@inject IAdultData _adultData
@inject NavigationManager NavigationManager 


<h3>Add Adults</h3>

<EditForm Model="@newAdult" OnValidSubmit="@AddNewAdult">
    <DataAnnotationsValidator/> <ValidationSummary/>
    <div class="form-group"> FirstName:<br/> 
        <InputText @bind-Value="newAdult.FirstName"/> 
    </div>
    
    <div class="form-group"> LastName:<br/> <InputText  @bind-Value="newAdult.LastName"/> </div>
    <div class="form-group"> Age:<br/> <InputNumber  @bind-Value="newAdult.Age"/> </div>
    <div class="form-group"> HairColor:<br/> <InputText  @bind-Value="newAdult.HairColor"/> </div> 
    <div class="form-group"> EyeColor:<br/> <InputText  @bind-Value="newAdult.EyeColor"/> </div> 
    <div class="form-group"> Weight:<br/> <InputNumber  @bind-Value="newAdult.Weight"/> </div> 
    
    
    <div class="form-group"> Height:<br/>
        <InputNumber @bind-Value="newAdult.Height"/>
    </div>

    <div class="form-group">
        Sex:<br/>
        <InputSelect @bind-Value="newAdult.Sex">
            <option value="">Select sex ...</option>
            <option value="M">Male</option>
            <option value="F">Female</option>
        </InputSelect>
    </div>

    <div class="form-group"> JobTitle:<br/> <InputText @bind-Value="job.JobTitle"/> </div> 
     <div class="form-group"> Salary:<br/> <InputNumber @bind-Value="job.Salary"/> </div>   
    
    <p class="actions">
        <button class="btn btn-outline-dark" type="submit">Create</button>
    </p>
</EditForm>

@code {
    
    private Adult newAdult = new Adult();
    private Job job = new Job();

    private void AddNewAdult()
    {
        newAdult.JobTitle = job;
        _adultData.AddAdults(newAdult);
        NavigationManager.NavigateTo("/Adults");
    }
    
    
    
}